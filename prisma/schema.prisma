datasource db { provider = "sqlite"; url = env("DATABASE_URL") }
generator client { provider = "prisma-client-js" }

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  gender    String?   // M/V/X
  age       Int?
  hand      String?   // Rechts/Links
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Court {
  id        String   @id @default(cuid())
  name      String   @unique        // Altaar Court, Court Roland, Singel Court
  bookings  Booking[]
}

model Booking {
  id        String   @id @default(cuid())
  userId    String
  courtId   String
  start     DateTime
  end       DateTime
  createdAt DateTime  @default(now())

  user  User  @relation(fields: [userId], references: [id])
  court Court @relation(fields: [courtId], references: [id])

  @@index([courtId, start, end])
  @@index([userId, start])
}
